<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="24/7 HEALTH CARE"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <GridLayout
        android:layout_width="376dp"
        android:layout_height="604dp"
        android:layout_margin="20dp"
        android:layout_marginTop="56dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminTitle">

        <LinearLayout
            android:id="@+id/adminPanelAddDoctor"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/adddoctor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD DOCTOR"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminPanelUpdateDoctor"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/updatedoctor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE DOCTOR"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminPanelAddAmbulance"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ambulance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD AMBULANCE"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminPanelLogOut"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG OUT"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminPanelAddLT"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/labtest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD LAB TEST"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/adminPanelAddHealthArticle"
            android:layout_width="110dp"
            android:minWidth="104dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/purpleDark"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/adddoctor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD HEALTH ARTICLES"
                android:textColor="@color/yellowLight"
                android:textStyle="bold" />

        </LinearLayout>


    </GridLayout>

</android.support.constraint.ConstraintLayout>